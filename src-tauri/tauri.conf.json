{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm tauribuild",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "src-python/*"
    ],
    "targets": ["deb", "rpm", "appimage", "nsis", "app", "dmg"],
    "createUpdaterArtifacts": true,
    "fileAssociations": [
      {
        "ext": [
          "risum", "risup", "charx"
        ]
      }
    ]
  },
  "productName": "DonguRisu",
  "mainBinaryName": "DonguRisu",
  "version": "1.0.0",
  "identifier": "com.sorryhyun.dongurisu",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["dongurisulocal"]
      }
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "DonguRisu",
        "width": 1024,
        "height": 768,
        "minWidth": 300,
        "minHeight": 500,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "asset",
          "$APPDATA",
          "$APPDATA/*",
          "$APPDATA/**/*",
          "/data/**/*"
        ],
        "enable": true
      },
      "csp": null
    }
  }
}